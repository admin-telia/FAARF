		<field name="view_mode">tree,form</field>
	</record>

    <!-- Vue besoins annuels formation line tree -->
    <record model="ir.ui.view" id="view_id_besoin_line_tree">
	<field name="name">view.hr_besoinformation.Line</field>
	<field name="model">hr_besoinformation_line</field>
	<field name="priority" eval="16"/>
	<field name="arch" type="xml">
		<tree string="Besoins Annuels Formations Line" editable="bottom">
		        <field name="name"/>
				<field name="x_theme" options="{'no_create':True}"/>
				<field name="formateur" invisible ="1"/>
				<field name="x_strucuture_concerne_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" invisible ="1"/>
