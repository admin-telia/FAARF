<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue besoin annuel formation  form -->
    <record model="ir.ui.view" id="view_id_besoin_form">
	<field name="name">view.hr.besoinformation.form</field>
	<field name="model">hr_besoinformation</field>
	<field name="priority" eval="16"/>
	<field name="arch" type="xml">
		<form string="Besoins Annuels Formations">
            <header>
                    <button string="Valider" name="action_valider" type="object" class="oe_highlight"
                    attrs="{'invisible' : [('state', 'not in', ['draft'])]}" groups='Gestion_Formation.Gestion_Formation_chef_service'/>
                    <button string="Receptionner" name="action_eng_recep" type="object" class="oe_highlight"
                    attrs="{'invisible' : [('state', 'not in', ['V'])]}" groups='Gestion_Formation.Gestion_Formation_manager_Gestionnaire'/>
                    <field name="state" widget = "statusbar"/>
            </header>
	        <sheet>
	        	<div class="oe_button_box" name="button_box">
					<button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
						<field name="active" widget="boolean_button" options='{"terminology":"archive"}'/>
					</button>
				</div>
				<label for="beneficiaire" class="oe_edit_only"/>
                <h1>
                    <field name="beneficiaire" options="{'no_create':True}"/>
                </h1>
				<group col = '3'>
					<group><field name="name" invisible = '1'/></group>
					<group><field name="date_besoin" invisible = '1'/></group>
					<group><field name="x_exercice_id" invisible = '1'/></group>
					<group><field name="service_demandeur" style="width:100%" invisible = '0'/></group>
					<!-- -<group><field name="id_service_demandeur" style="width:100%" invisible = '0'/></group>-->

				</group>
				<group><field name="objet_besoin"/></group>
				<group>
				      <field name = 'x_line_ids'/>
				</group>
			</sheet>

		</form>
	</field>
</record>

    <record model="ir.ui.view" id="view_id_besoin_tree">
	<field name="name">view.hr.besoinformation.tree</field>
	<field name="model">hr_besoinformation</field>
	<field name="priority" eval="16"/>
	<field name="arch" type="xml">
		<tree string="Besoins Annuels Formations">
		    <field name="sequence" widget="handle"/>
			<field name="name"/>
			<field name="x_exercice_id"/>
			<field name="beneficiaire"/>
			<field name="service_demandeur"/>
			<field name="state"/>
		</tree>
	</field>
</record>

    <record model="ir.actions.act_window" id="act_list_besoin">
		<field name="name">Liste des besoins annuels de formation</field>
